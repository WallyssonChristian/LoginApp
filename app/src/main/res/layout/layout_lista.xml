<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/marginBottom"
    android:layout_marginLeft="@dimen/marginLeft"
    android:layout_marginRight="@dimen/marginRight"
    android:layout_marginTop="@dimen/marginTop"
    android:columnCount="5"
    android:orientation="vertical"
    android:rowCount="5">


    <TextView
        android:id="@+id/tv_categFilme"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/LayoutHeightDefault"
        android:layout_column="2"
        android:layout_margin="@dimen/HalfMarginDefault"
        android:layout_row="1"
        android:text="CATEGORIA" />

    <TextView
        android:id="@+id/tv_idFilme"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/LayoutHeightDefault"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="@dimen/HalfMarginBottom"
        android:layout_marginLeft="@dimen/HalfMarginLeft"
        android:layout_marginRight="@dimen/HalfMarginRight"
        android:layout_marginTop="@dimen/HalfMarginTop"
        android:layout_row="0"
        android:text="ID" />

    <TextView
        android:id="@+id/tv_classifcFilme"
        android:layout_width="60dp"
        android:layout_height="@dimen/LayoutHeightDefault"
        android:layout_column="0"
        android:layout_marginBottom="@dimen/HalfMarginBottom"
        android:layout_marginLeft="@dimen/HalfMarginLeft"
        android:layout_marginRight="@dimen/HalfMarginRight"
        android:layout_marginTop="@dimen/HalfMarginTop"
        android:layout_row="1"
        android:text="Class" />

    <TextView
        android:id="@+id/tv_nomeFilme"
        android:layout_width="150dp"
        android:layout_height="@dimen/LayoutHeightDefault"
        android:layout_column="1"
        android:layout_marginBottom="@dimen/HalfMarginBottom"
        android:layout_marginLeft="@dimen/HalfMarginLeft"
        android:layout_marginRight="@dimen/HalfMarginRight"
        android:layout_marginTop="@dimen/HalfMarginTop"
        android:layout_row="1"
        android:text="TITULO" />

</GridLayout>