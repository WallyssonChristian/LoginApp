<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrador.loginapp.ConsultaActivity"
    android:layout_margin="@dimen/marginDefault">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_lay_tit_class"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/LayoutHeightHeader"
            android:layout_margin="@dimen/HalfMarginDefault"
            android:layout_weight="1"
            android:text="ClassInd" />

        <TextView
            android:id="@+id/tv_lay_tit_nomefilme"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/LayoutHeightHeader"
            android:layout_margin="@dimen/HalfMarginDefault"
            android:layout_weight="1"
            android:text="Titulo" />

        <TextView
            android:id="@+id/tv_lay_tit_categ"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/LayoutHeightHeader"
            android:layout_margin="@dimen/HalfMarginDefault"
            android:layout_weight="1"
            android:text="Categoria" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_filmes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ll_header"/>

</RelativeLayout>

